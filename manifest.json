{
    "manifest_version" : 3 ,
    "name": "Detox" ,
    "description" : "Helps reduce social media addiction through mindful browsing",
    "version": "1.0.0",
    "permissions" : [
        "storage",
        "tabs",
        "activeTab"
    ],
    "background" : {
        "service_worker": "background.js"
    },
    "action" : {
        "default_popup" : "popup.html",
        "default_title" : "Detox settings"
    },
    "content_scripts" : [
        {
            "matches" : ["https://*.youtube.com/*", "https://*.twitter.com/*", "https://*.instagram.com/*"],
            "js" : ["content.js"],
            "css": ["content.css"]
        }
    ]
}