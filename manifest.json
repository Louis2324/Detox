{
    "manifest_version" : 3,
    "name":"detox",
    "description":"Limits your daily scroll time to avoid relapse into doom scrolling",
    "version":"1.0.0",
    "permissions":["storage","tabs","scripting"],
    "background":{
        "service_worker":"background.js"
    },
    "content_scripts":[
        {
            "matches": ["https://www.youtube.com/shorts/*"],
            "js":"content.js"
        }
    ],
    "action": {
        "default_popup":"detox.html"
    }

}